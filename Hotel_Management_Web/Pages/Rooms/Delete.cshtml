@page
@model Hotel_Management_Web.Pages.Rooms.DeleteModel

@{
    ViewData["Title"] = "Delete";
    var item = Model.Room;
    var x = Model.Room.Status == 1 ? "Delete" : "Restore";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.RoomDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.RoomDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.RoomPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.RoomPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.ImageString)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.ImageString)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Hotel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Hotel.HotelId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Type.TypeId)
        </dd>
    </dl>
    
    <form method="post" onclick="return confirm('Are you sure you want to delete/restone this?')">
        <input type="hidden" asp-for="Room.RoomId" />
        <input hidden name="myButton" value="@item.HotelId">
        <input type="submit" value="@x" class="btn btn-danger" /> |
        <a href="/Rooms?buttonValue=@item.HotelId">Back to List</a>
    </form>
</div>
