@page
@model Hotel_Management_Web.Pages.Rooms.EditModel

@{
    ViewData["Title"] = "Edit";
    var item = Model.Room;
}

<h1>Edit</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Room.RoomId" />
            <input type="hidden" asp-for="Room.HotelId" />
            <div class="form-group">
                <label asp-for="Room.TypeId" class="control-label"></label>
                <select asp-for="Room.TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
                <span asp-validation-for="Room.TypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.RoomDescription" class="control-label"></label>
                <input asp-for="Room.RoomDescription" class="form-control" />
                <span asp-validation-for="Room.RoomDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input hidden asp-for="Room.Status" class="form-control" />
                <span asp-validation-for="Room.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.RoomPrice" class="control-label"></label>
                <input asp-for="Room.RoomPrice" class="form-control" />
                <span asp-validation-for="Room.RoomPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.ImageString" class="control-label"></label>
                <input asp-for="Room.ImageString" class="form-control" />
                <span asp-validation-for="Room.ImageString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input hidden name="myButton" value="@item.HotelId">
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Rooms?buttonValue=@item.HotelId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
