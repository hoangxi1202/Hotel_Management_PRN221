@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.StaffId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.HotelId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.StaffName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Email)
        </dd>
        <dt class="col-sm-2">
