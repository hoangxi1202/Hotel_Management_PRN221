@model Hotel_Management_Web.Pages.Hotels.DeleteModel

@{
    ViewData["Title"] = "Delete";
    var x = Model.Hotel.Status == 1 ? "Delete" : "Restore";
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Hotel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hotel.HotelName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hotel.HotelName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hotel.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hotel.Image)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hotel.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hotel.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hotel.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hotel.Status)
        </dd>
    </dl>
    
    <form method="post" onclick="return confirm('Are you sure you want to delete/restone this?')">
        <input type="hidden" asp-for="Hotel.HotelId" />
        <input type="submit" value="@x" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
