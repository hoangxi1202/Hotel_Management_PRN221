@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Hotel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Hotel.HotelId" />
            <div class="form-group">
                <label asp-for="Hotel.HotelName" class="control-label"></label>
                <input asp-for="Hotel.HotelName" class="form-control" />
                <span asp-validation-for="Hotel.HotelName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hotel.Image" class="control-label"></label>
                <input asp-for="Hotel.Image" class="form-control" />
                <span asp-validation-for="Hotel.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hotel.Address" class="control-label"></label>
                <input asp-for="Hotel.Address" class="form-control" />
                <span asp-validation-for="Hotel.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hotel.Status" class="control-label"></label>
                <input asp-for="Hotel.Status" class="form-control" />
                <span asp-validation-for="Hotel.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
